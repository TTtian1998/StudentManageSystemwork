<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>jsp/login.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>com.TianZeXin.flection.processor.ResourseListener</listener-class>
    </listener>

    <servlet>
        <description>用来登录的Servlet</description>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>用来注册的Servlet</description>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.RegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/RegistServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>用来表格请求的Servlet</description>
        <servlet-name>TableServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.TableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TableServlet</servlet-name>
        <url-pattern>/TableServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>学生信息表格请求的Servlet</description>
        <servlet-name>InfoTableServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.InfoTableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InfoTableServlet</servlet-name>
        <url-pattern>/InfoTableServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>学生成绩表格请求的Servlet</description>
        <servlet-name>GradeTableServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.GradeTableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GradeTableServlet</servlet-name>
        <url-pattern>/GradeTableServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>添加学生信息的Servlet</description>
        <servlet-name>AddInfoServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.AddInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddInfoServlet</servlet-name>
        <url-pattern>/AddInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>添加学生成绩的Servlet</description>
        <servlet-name>AddGradeServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.AddGradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddGradeServlet</servlet-name>
        <url-pattern>/AddGradeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>删除信息的Servlet</description>
        <servlet-name>DeleteInfoServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.DeleteInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteInfoServlet</servlet-name>
        <url-pattern>/DeleteInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>删除成绩的Servlet</description>
        <servlet-name>DeleteGradeServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.DeleteGradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteGradeServlet</servlet-name>
        <url-pattern>/DeleteGradeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>修改信息的Servlet</description>
        <servlet-name>AlterInfoServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.AlterInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlterInfoServlet</servlet-name>
        <url-pattern>/AlterInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>修改成绩的Servlet</description>
        <servlet-name>AlterGradeServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.AlterGradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlterGradeServlet</servlet-name>
        <url-pattern>/AlterGradeServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <description>用于信息查询的Servlet</description>
        <servlet-name>SearchInfoServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.SearchInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchInfoServlet</servlet-name>
        <url-pattern>/SearchInfoServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <description>用于成绩查询的Servlet</description>
        <servlet-name>SearchGradeServlet</servlet-name>
        <servlet-class>com.TianZeXin.servlet.SearchGradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchGradeServlet</servlet-name>
        <url-pattern>/SearchGradeServlet</url-pattern>
    </servlet-mapping>
</web-app>